<div class="page-header">
  <h1>
    Mission participants
    <a href="/mission_participants/new" class="btn btn-lg btn-success">New Mission participant</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Mission</th>
        <th>Pass or fail</th>
        <th>Actions</th>
      </tr>

      <% @mission_participants.each do |mission_participant| %>
      <tr>
        <td>
          <% if mission_participant.user.present? %>
            <a href="/users/<%= mission_participant.user.id %>">
              <%= mission_participant.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if mission_participant.mission.present? %>
            <a href="/missions/<%= mission_participant.mission.id %>">
              <%= mission_participant.mission.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= mission_participant.pass_or_fail %></td>
        <td>
          <a href="/mission_participants/<%= mission_participant.id %>" class="btn btn-primary">Show</a>
          <a href="/mission_participants/<%= mission_participant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_mission_participant/<%= mission_participant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @mission_participants, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
