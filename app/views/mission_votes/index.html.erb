<div class="page-header">
  <h1>
    Mission votes
    <a href="/mission_votes/new" class="btn btn-lg btn-success">New Mission vote</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Vote</th>
        <th>User</th>
        <th>Mission</th>
        <th>Actions</th>
      </tr>

      <% @mission_votes.each do |mission_vote| %>
      <tr>
        <td><%= mission_vote.vote %></td>
        <td><%= mission_vote.user.email %></td>
        <td><%= mission_vote.mission.created_at %></td>
        <td>
          <a href="/mission_votes/<%= mission_vote.id %>" class="btn btn-primary">Show</a>
          <a href="/mission_votes/<%= mission_vote.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_mission_vote/<%= mission_vote.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @mission_votes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
